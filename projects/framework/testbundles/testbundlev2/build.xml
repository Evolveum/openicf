<project name="testbundlev1" default="all"> 
    <property name="framework.dir" value="../.."/>
    <import file="${framework.dir}/connector_build.xml"/>

    <!-- 
        Include other bundles.

        Note: This must come after the import statement above in order
        override the default value set in the 'connector_build.xml'.
    -->
    <property name="testcommon.dir" value="../testcommonv2" />
    <target name="-pre-compile-extra">
       <mkdir dir="${lib}"/>
       <copy todir="${lib}" flatten="true">
           <fileset dir="${testcommon.dir}" includes="dist/*common*.jar"/>
       </copy>
    </target>

    <target name="-pre-clean-extra">
       <delete dir="${lib}"/>
    </target>

</project>
