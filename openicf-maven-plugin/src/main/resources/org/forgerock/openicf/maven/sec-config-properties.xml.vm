<section xml:id='sec-config-properties-${connectorName}-${project.version}'
         xmlns='http://docbook.org/ns/docbook'
         version='5.0' xml:lang='en'
         xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
         xsi:schemaLocation='http://docbook.org/ns/docbook
         http://docbook.org/xml/5.0/xsd/docbook.xsd'
         xmlns:xlink='http://www.w3.org/1999/xlink'>

    <title>${connectorDisplayName} Configuration</title>
    <para>
        The ${connectorDisplayName} has the following configurable properties.
    </para>

    #foreach($configurationGroup in $configurationProperties.entrySet())
        <!--THE FOLLOWING SECTION MUST BE GENERATED ONCE FOR EACH groupMessageKey -->

        <section xml:id="${configurationGroup.key}-properties-${connectorName}-${project.version}">
            <title>$configurationGroup.key Properties</title>

            <informaltable>
                <tgroup cols="6">
                    <colspec colnum="1" colwidth="2*"/>
                    <colspec colnum="2" colwidth="1*"/>
                    <colspec colnum="3" colwidth="1*"/>
                    <colspec colnum="4" colwidth="1*"/>
                    <colspec colnum="5" colwidth="3*"/>
                    <colspec colnum="6" colwidth="2*"/>
                    <thead>
                        <row>
                            <entry>Property</entry>
                            <entry>Type</entry>
                            <entry>Default Value</entry>
                            <entry>
                                <mediaobject>
                                    <imageobject>
                                        <imagedata fileref="shared/images/encrypted.png" format="PNG"/>
                                    </imageobject>
                                </mediaobject>
                                <footnote>
                                    <para>
                                        Indicates whether the property value is considered confidential, and
                                        therefore encrypted in OpenIDM.
                                    </para>
                                </footnote>
                            </entry>
                            <entry>Description</entry>
                            <entry>Required for these Operations</entry>
                        </row>
                    </thead>
                    <tbody>
                        #foreach($property in $configurationGroup.value)
                            <row valign="top">
                                <entry>
                                    <literal>${property.name}</literal>
                                </entry>
                                <entry>
                                    <literal>${property.type}</literal>
                                </entry>
                                <entry>
                                    <literal>${property.value}</literal>
                                </entry>
                                <entry>
                                    #if (${property.confidential})
                                        <mediaobject>
                                            <imageobject>
                                                <imagedata fileref="shared/images/encrypted.png" format="PNG"/>
                                            </imageobject>
                                        </mediaobject>
                                    #end
                                </entry>
                                <entry>
                                    <literal>${property.description}</literal>
                                </entry>
                                <entry>
                                    #if($property.operations.size() > 0)
                                        <imageobject>
                                            <imagedata
                                                    fileref="shared/images/#if($property.required)yes#{else}no#end-icon.png"
                                                    format="PNG"/>
                                        </imageobject>
                                        <simplelist>
                                            #foreach($operation in $property.operations)
                                                <member>
                                                    <link xlink:show="new"
                                                          xlink:href="config-reference#interface-attributeNormalizer"
                                                          xlink:role="http://docbook.org/xlink/role/olink">$operation</link>
                                                </member>
                                            #end
                                        </simplelist>
                                    #else
                                        <mediaobject>
                                            <imageobject>
                                                <imagedata
                                                        fileref="shared/images/#if($property.required)yes#{else}no#end-icon.png"
                                                        format="PNG"/>
                                            </imageobject>
                                        </mediaobject>
                                    #end
                                </entry>
                            </row>
                        #end
                    </tbody>
                </tgroup>
            </informaltable>

        </section>
    #end

</section>
