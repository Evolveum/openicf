            <a href="./doc/${project.artifactId}-${project.version}/index.html">HTML (single page)</a>,
            <a href="./doc/${project.artifactId}-${project.version}/index/index.html">HTML (1 page/chapter)</a>,
            <!-- TODO Fix the document name see: org.forgerock.doc.maven.DocUtils#renameDoc-->
            <a href="./doc/OpenICF-${documentName}.pdf">PDF</a>,
            <!-- TODO Fix the document name see: org.forgerock.doc.maven.DocUtils#renameDoc-->
            <a href="./doc/OpenICF-${documentName}.rtf">RTF</a>,
            <a href="./doc/webhelp/${project.artifactId}-${project.version}/index.html">Webhelp</a>
